---
import '../styles/global.css';

const { subheadline, headline, headlineAccent, description, descriptionAccent} = Astro.props;
---



<style>

.hero-wrapper {
    text-transform: uppercase;
    padding-left: 80px;
    padding-top: 110px;
    max-width: 658px;
}
</style>

<div class="hero-wrapper">
    <p class="subheader">{subheadline} </p>
    <h1 class="headline">{headline} <span class="headline--accent">{headlineAccent}</span></h1>
    <p class="description">{description} <span class="description description--accent description--bold">{descriptionAccent}</span></p>

    <slot />
</div>